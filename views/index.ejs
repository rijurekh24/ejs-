            <div style="display: flex; gap: 18px;">
                <div style="width: 180px; height: 230px; background-color: #00806d; border-radius: 0 15px 15px 0;">
                </div>

                <div
                    style="background: url('<%= blackImageUrl %>') no-repeat center center / cover, linear-gradient(to bottom right, #0a0a0a, #333); border-radius: 15px; width: 400px; height: 230px; color: white; display: flex; flex-direction: column; justify-content: space-between;">
