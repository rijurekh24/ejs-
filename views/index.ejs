            <header style="display: flex; justify-content: space-between; align-items: center;">
                <img src="<%= grayUrl %>" alt="Logo" style="height: 35px;">
                <div style="font-size: 28px; color: #000; font-weight: bold;">Smart Report</div>
            </header>
            <div class="content">
                <h1 style="text-align: center; margin: 20px 0 0 0; font-size: 27px;">Historical Charts - Page <%= pageIndex
                        + 1 %>
                </h1>
                <p style="text-align: center; margin: 20px 0 20px 0; font-size: 20px;">As of 30th Dec</p>
    
                <!-- Dynamic chart containers -->
                <div id="charts-container" style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 10px;">
                    <% chunk.forEach((test, index)=> { %>
                        <div class="card"
                            style="background:#fff; padding: 15px;padding-bottom: 0; border-radius: 7px; display: flex; flex-direction: column;margin-bottom: 0; ">
                            <div style="display: flex; justify-content: space-between; ">
                                <div>
                                    <h2 style="font-size: 16px; margin: 0; max-width: 110px; word-wrap: break-word;">
                                        <%= test.testName %>
                                    </h2>


                                    <p style="margin: 10px 0 0px 0; font-size: 12px; color: #999;">
                                        Your Latest Result: <br>
                                        <strong style="color: #000; font-size: 20px;">
                                            <%= test.currentResultValue %>
                                                <%= test.unit %>
                                        </strong>
                                    </p>
                                    <p style="margin: 10px 0 0px 0; font-size: 12px; color: #999;">On: <span>
                                            <%= test.currentResultDate %>
                                        </span></p>
                                </div>
                                <div>
                                    <p
                                        style="color: <%= test.abnormal ? '#ff5555' : '#228B22' %>; margin: 0; font-weight: 600; font-size: 14px; margin-bottom: 20%; text-align:end">
                                        • <%= test.abnormal ? 'Low' : 'High' %>
                                    </p>
                                    <div
                                        style="width: 170px; height: 6px; border-radius: 20px; position: relative; background: linear-gradient(to right, #f89897, #228B22, #ff5555);">
                                        <div
                                            style="width: 15px;height: 15px;background-color: <%= test.abnormal ? '#ff5555' : '#228B22' %>;border-radius: 50%;position: absolute;left: <%= test.abnormal ? '130px' : '50px' %>;top: -6px;border: 2px solid white">
                                        </div>
                                    </div>
                                    <div style="display: flex; width: 160px; justify-content: space-around; gap: 60px;">
                                        <p style="font-size: 12px;">8.8</p>
                                        <p style="font-size: 12px;">10.5</p>
                                    </div>
                                </div>
                            </div>
                            <div id="chart<%= pageIndex * 4 + index %>" ></div>
                        </div>
                        <% }) %>
                </div>
            </div>
            
            <div style="margin-top: auto;">
                <hr>
            </div>
            <footer style=" padding: 0 0; text-align: center;">
                <p>NY Patil Medical College, Pune, Maharashtra</p>
                <p>www.mainwebsite.com</p>
            </footer>
        </div>
        <% }) %>
    
    <!-- page 5 -->
    <% const chunkSizeTable=8; %>
        <% for (let i=0; i < history.length; i +=chunkSizeTable) { %>
            <div class="a4-page" style="background-color:#f4f4f4 !important;">
                <header style="display: flex; justify-content: space-between; align-items: center;">
                    <img src="<%= grayUrl %>" alt="Logo" style="height: 35px;">
                    <div style="font-size: 28px; color: #000; font-weight: bold;">Smart Report</div>
                </header>
    
                <div
                    style="text-align: center; display: flex; justify-content: center; flex-direction: column; align-items: center;">
                    <h1 style="text-align: center; margin: 10px 0 10px 0; font-size: 27px;">Summary of Current Tests</h1>
                </div>
    
                <div class="table-container" id="tableContainer">
                    <table>
                        <thead>
                            <tr>
                                <th>Test Name</th>
                                <th>Normal Range</th>
                                <th>Previous Test</th>
                                <th>Previous Test</th>
                                <th>Latest Test</th>
                            </tr>
                        </thead>
                    <tbody>
                        <% history.slice(i, i + chunkSizeTable).forEach(test=> { %>
                            <% if (test.testName !=="Comments if any" ) { %>
                                <tr>
                                    <td style="width: 70px; white-space: normal; word-wrap: break-word;">
                                        <%= test.testName %>
                                    </td>
                                    <td>
                                        <%= test.biologicalRefInterval[0] || "" %>
                                    </td>
                                    <td
                                        style="color: <%= test.last3Tests[2]?.value > test.biologicalRefInterval[1] ? '#b02b2b' : '#228b22' %>;">
                                        <%= test.last3Tests[2]?.value || "-" %>
                                    </td>
                                    <td
                                        style="color: <%= test.last3Tests[1]?.value > test.biologicalRefInterval[1] ? '#b02b2b' : '#228b22' %>;">
                                        <%= test.last3Tests[1]?.value || "-" %>
                                    </td>
                                    <td>
                                        <span class="<%= test.abnormal ? 'concerning' : 'good' %>" style="width: 70px; white-space: normal; word-wrap: break-word;">
                                            <%= test.last3Tests[0]?.value || "-" %><br>
                                                <small>
                                                    <%= test.abnormal ? 'Concerning' : 'Looks Good' %>
                                                </small>
                                        </span>
                                    </td>
                                </tr>
                                <% } %>
                                    <% }) %>
                    </tbody>

                    </table>
                </div>
    
                <div style="margin-top: auto;">
                    <hr>
                    <footer>
                        <p>NY Patil Medical College, Pune, Maharashtra</p>
                        <p>www.mainwebsite.com</p>
                    </footer>
                </div>
            </div>
            <% } %>


    <!-- Import ApexCharts JS -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    
    <script>
                document.addEventListener("DOMContentLoaded", function () {
                    const history = <%- JSON.stringify(history) %>;

                    history.forEach((test, index) => {
                        if (test.isGraphPlotable) {
                            const chartId = `chart${index}`; 
                            const chartContainer = document.getElementById(chartId);

                            if (chartContainer) {
                                const parsedValues = test.last3Tests.map((testData) =>
                                    parseFloat(testData.value)
                                );

                                const chartOptions = {
                                    series: [
                                        {
                                            name: test.testName,
                                            data: test.last3Tests.map((testData) => ({
                                                x: testData.date,
                                                y: parseFloat(testData.value)
                                            }))
                                        }
                                    ],
                                    chart: {
                                        type: 'bar',
                                        height: 160,
                                        toolbar: { show: false },
                                    },
                                    xaxis: {
                                        categories: test.last3Tests.map((testData) => testData.date),
                                    },
                                    yaxis: {
                                       min: Math.min(...parsedValues) - 0.5,
                                        max: Math.max(...parsedValues) + 0.5,
                                        tickAmount: 4,
                                        labels: {
                                            formatter: function (value) {
                                                return value.toFixed(2);
                                            }
                                        }
                                    },
                                    dataLabels: {
                                        enabled: true,
                                    },
                                    plotOptions: {
                                        bar: {
                                            borderRadius: 5,
                                            horizontal: false,
                                        },
                                    },
                                    grid: {
                                        show: true,
                                        yaxis: {
                                            lines: {
                                                show: true,
                                            },
                                        },
                                    },
                                    colors: [test.abnormal ? "#ff5555" : "#228B22"],
                                };

                                const chart = new ApexCharts(chartContainer, chartOptions);
                                chart.render();
                            }
                        }
                    });
                });
    </script>



</body>

</html>